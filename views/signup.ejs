<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>STAMP APP</title>
        <link rel="stylesheet" href="/css/style.css">
        <script src="/send_url.js"></script>
    </head>

    <header>
        <a class="header-logo" href="/" >STAMP APP</a>
    </header>

    <body>
        <div class="sign">
            <h1><a href="/record">STAMP APP</a> </h1>
            <div class="panel">
                <h2>新規登録</h2>
                <% if (errors.length > 0) { %>
                    <ul class="errors">
                        <% errors.forEach(error => { %>
                            <li><%= error %></li>
                        <% }); %>
                    </ul>
                <% } %>
                <form action="/signup" method="post">
                    <p>ユーザー名</p>
                    <input type="text" name="username">

                    <p>メールアドレス</p>
                    <input type="text" name="email">

                    <p>パスワード</p>
                    <input type="password" name="password">

                    <input type="submit" value="登録する">
                    <a href="/record">もどる</a>
                </form>
            </div>
        </div>
    </body>
</html>